@model HMSApp.Models.Payments

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Payments</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PayCode)

        <div class="form-group">
            @Html.LabelFor(model => model.PatientID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PatientID")
                @Html.ValidationMessageFor(model => model.PatientID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorFee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DoctorFee)
                @Html.ValidationMessageFor(model => model.DoctorFee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrescriptionFee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrescriptionFee)
                @Html.ValidationMessageFor(model => model.PrescriptionFee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CheckupFee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckupFee)
                @Html.ValidationMessageFor(model => model.CheckupFee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HospitalFee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HospitalFee)
                @Html.ValidationMessageFor(model => model.HospitalFee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Total, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Total)
                @Html.ValidationMessageFor(model => model.Total)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { @class = "datepicker" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 
